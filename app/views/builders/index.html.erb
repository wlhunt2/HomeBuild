
  <main>
    <p id="notice"><%= notice %></p>

    <h1>Builders</h1>

    <div class="test-client-links">
      <p><%= button_to 'Create a Builder', new_builder_path, method: :get %></p>
    </div>

    <div class="innertube">
      <h2>Builders List</h2>

      <table class="table-fill">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>email</th>

        </tr>

        <% @builders.each do |builder| %>
          <tr>
            <td><%= builder.first_name %> <%= builder.last_name %></td>
            <td><%= builder.phone %></td>
            <td><%= builder.address %></td>
            <td><%= builder.city %></td>
            <td><%= builder.state %></td>
            <td><%= builder.zip %></td>
            <td><%= builder.email %></td>
            <td><%= button_to 'Show', builder_path(builder), method: :get %></td>
            <td><%= button_to 'Edit', edit_builder_path(builder), method: :get %></td>
            <td><%= button_to 'Destroy',
                              builder_path(builder),
                              method: :delete,
                              data: {confirm: 'Are you sure you want to delete?'} %></td>
          </tr>
        <% end %>
      </table>
    </div>

  </main>