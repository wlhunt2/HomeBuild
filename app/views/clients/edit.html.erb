<body>
  <main>
    <h1>Client#edit</h1>
    <p>Find me in app/views/client/edit.html.erb</p>

    <%= form_for :client, url: client_path(@client) , method: :patch do |f| %>

      <p>
        <%= f.label :first_name %>:
        <%= f.text_field :first_name %>
        <%= f.label :last_name %>:
        <%= f.text_field :last_name %>
      </p>
      <p>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </p>
      <p>
        <%= f.label :address %>
        <%= f.text_field :address %>
      </p>
      <p>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </p>
      <p>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </p>
      <p>
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </p>
      <p><%= f.submit %></p>
    <% end %>

    <%= link_to 'Back', clients_path %>

  </main>
</body>